@{
    if (HttpContext.Current.IsDebuggingEnabled)
     {
         ViewBag.Title = Model.Exception.Message;
     }
     else
     {
         ViewBag.Title = "Ha ocurrido un error en la operación solicitada";
     }
}

@using ErrorLab.WebUI.Infrastructure
@model HandleErrorInfo

<div style="width:720px; height:460px; margin:0 auto; background-image:url(../../images/404BG.jpg); background-repeat:no-repeat; position:relative">
    <div style="position:absolute; top:70px; left:65px;"><img src="../../images/whoopsie.jpg" width="244" height="50" /></div>
    <div style="position:absolute; top:135px; left:80px; width:244px">
        <p>Ha ocurrido un error en la aplicación</p>
        @if (Model.Exception is AppException)
        {
            <p style="font-weight: bold;">@Model.Exception.Message</p>
        }
        @if (HttpContext.Current.IsDebuggingEnabled)
        {
            <p style="font-weight: bold;">La acción @Model.ActionName del controlador @Model.ControllerName ha lanzado la excepción @Model.Exception.GetType().Name con el mensaje "@Model.Exception.Message".</p>
        }
    </div>
</div>
